{
  "manifest_version": 3,
  "name": "ChromeAi",
  "version": "1.0",
  "description": "AI Chat Interface Chrome Extension",
  "permissions": [
    "commands",
    "tabs",
    "activeTab",
    "clipboardWrite",
    "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "styles.css"
      ],
      "matches": [
        "<all_urls>"
      ],
      "use_dynamic_url": true
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "commands": {
    "toggle-panel": {
      "suggested_key": {
        "default": "Alt+A"
      },
      "description": "Toggle the AI chat panel"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}